@{
    ViewData["Title"] = "New Purchase";
}

<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
</head>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">NEW PURCHASE</h2>
            <form asp-action="Purchase" asp-asp-controller="Purchase" method="post">
                <div class="form-group">
                    <label for="fecha">DATE</label>
                    <input type="date" class="form-control" id="purchaseDate" name="purchaseDate">
                </div>
                <div class="form-group">
                    <label for="numero">AMOUNT</label>
                    <input type="text" class="form-control" id="purchaseAmount" name="purchaseAmount">
                </div>
                <div class="form-group">
                    <label for="texto">DESCRIPTION</label>
                    <input type="text" class="form-control" id="descp" name="descp">
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Sent Purchase</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-dark" type="button">Cancel</a>
            </form>
        </div>
    </div>
</div>


<blockquote class="blockquote text-center">
    <p class="mb-0"> @ViewBag.Message </p>
    <footer class="blockquote">@ViewBag.Message2 </footer>
</blockquote>

@section Scripts
{
    <script>
        onload = function () {
            var ele = document.querySelectorAll('#purchaseAmount')[0];
            ele.onkeypress = function (e) {
                if (isNaN(this.value + String.fromCharCode(e.charCode)))
                    return false;
            }
            ele.onpaste = function (e) {
                e.preventDefault();
            }
        }
    </script>

}




